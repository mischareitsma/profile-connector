{
  "name": "@mischareitsma/profile-connector",
  "description": "Profile Connector",
  "version": "0.0.1-alpha2",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "check-types": "tsc -p tsconfig.json",
    "lint": "npx eslint .",
    "test": "node --test --no-warnings --import tsx test/*.test.ts",
    "bundle": "node ./esbuild.cjs",
    "create-types": "npx dts-bundle-generator ./src/index.ts -o dist/index.d.ts",
    "prebuild": "npm run clean && npm run lint && npm run check-types && npm run test",
    "generate-package-json": "node ./build-package-json.js",
    "copy-extra-files-dist": "cp README.md CHANGELOG.md LICENSE dist/",
    "build": "npm run bundle -- --production && npm run create-types && npm run generate-package-json && npm run copy-extra-files-dist",
    "release": "npm run build && npm publish --access public dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ing-bank/profile-connector.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@types/node": "^20.11.1",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.11",
    "rimraf": "^5.0.5",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.22.0"
  }
}

{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "inlineSourceMap": true,
        "incremental": true,
        "composite": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "alwaysStrict": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "declaration": true,
        "noEmit": true,
    },
    "exclude": [
        "node_modules",
        "out",
        "dist",
        "lib",
        "tmp",
        "test",
        "build-package-json.js",
        "esbuild.cjs"
    ],
}
